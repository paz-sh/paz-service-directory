    "leveldown": "^0.10.2",
    "levelup": "^0.18.2",
    "restify": "^2.7.0"
  },
  "devDependencies": {
    "aglio": "^1.14.0",
    "expectations": "^0.2.5",
    "json-override": "^0.1.2",
    "lab": "^4.4.4",
    "mocha": "^1.18.2",
    "precommit-hook": "^1.0.7",
    "st": "^0.5.1",
    "supertest": "^0.12.0"
